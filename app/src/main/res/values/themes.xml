<resources>
    <!-- Base application theme. -->
    <style name="Theme.MotivateMe" parent="android:style/Theme.Material.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:colorPrimary">@color/purple_500</item>
        <!-- Secondary brand color. -->
        <item name="android:colorAccent">@color/teal_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/purple_500</item>
        <item name="android:background">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="splash" parent="android:style/Theme.Material.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:background">@drawable/splash</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>